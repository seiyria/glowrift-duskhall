{
  "name": "glowrift-duskhall",
  "version": "0.0.1",
  "scripts": {
    "start": "concurrently \"npm run start:app\" \"npm run gamedata:watch\"",
    "start:app": "ng serve --open --port 9866",
    "setup": "npm run gamedata:build",
    "lint": "ng lint",
    "build:copychangelog": "cpy CHANGELOG.md CHANGELOG-current.md dist/glowrift-duskhall/browser",
    "build:syncversion": "ts-node scripts/build-syncversion",
    "build:versioninfo": "ts-node scripts/build-versioninfo",
    "build:blogpost": "ts-node scripts/build-blogpost",
    "build:electron": "npm run build && npm run build:syncversion && npm run build:electron:package",
    "build:electron:package": "cd electron && npm run make",
    "build": "npm run build:versioninfo && npm run gamedata:build && npm run gamedata:art:spritesheets && ng build --configuration production && npm run build:copychangelog",
    "gamedata:watch": "ts-node scripts/gamedata-watch",
    "gamedata:build": "ts-node scripts/gamedata-build",
    "gamedata:maps": "ts-node scripts/gamedata-maps",
    "gamedata:art:spritesheets": "ts-node scripts/gamedata-art-spritesheets",
    "bump:major": "npm version major -m \"chore(release): Major %s\"",
    "bump:minor": "npm version minor -m \"chore(release): Minor %s\"",
    "bump:patch": "npm version patch -m \"chore(release): Patch %s\"",
    "util:changelog:generate": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0",
    "util:changelog:generate:current": "conventional-changelog -p angular -o CHANGELOG-current.md -r 2",
    "util:changelog:commit": "git commit CHANGELOG.md CHANGELOG-current.md -m \"Update changelog\" || true",
    "util:dirtycheck": "ts-node scripts/util-dirtycheck",
    "util:version:reversion": "ts-node scripts/util-postversion-reversion",
    "preversion": "npm run util:dirtycheck && npm run lint && npm run build",
    "postversion": "npm run util:changelog:generate && npm run util:changelog:generate:current && npm run util:changelog:commit && npm run util:version:reversion && npm run push",
    "push": "git push && git push --tags",
    "postinstall": "npm run gamedata:art:spritesheets && npm run gamedata:build"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^19.2.1",
    "@angular/common": "^19.2.1",
    "@angular/compiler": "^19.2.1",
    "@angular/core": "^19.2.1",
    "@angular/forms": "^19.2.1",
    "@angular/platform-browser": "^19.2.1",
    "@angular/platform-browser-dynamic": "^19.2.1",
    "@angular/router": "^19.2.1",
    "@ng-icons/core": "^29.6.1",
    "@ng-icons/game-icons": "^29.9.0",
    "@ng-icons/tabler-icons": "^29.8.0",
    "@ngneat/helipopper": "^9.2.1",
    "@ngxpert/hot-toast": "^3.0.2",
    "@pixi/graphics": "^7.4.3",
    "@pixi/sprite": "^7.4.3",
    "@sweetalert2/ngx-sweetalert2": "^12.4.0",
    "@sweetalert2/theme-dark": "^5.0.18",
    "@tailwindcss/postcss": "^4.1.7",
    "cardinal-direction": "^1.1.1",
    "console-log-colors": "^0.5.0",
    "fantastical": "^2.0.1",
    "gameanalytics": "^4.4.7",
    "lodash": "^4.17.21",
    "logger-timer": "^1.0.7",
    "marked": "^15.0.0",
    "mustache": "^4.2.0",
    "ngx-drag-drop": "^19.0.0",
    "ngxtension": "^5.0.0",
    "pixi.js": "^8.10.1",
    "rollbar": "^2.26.4",
    "rxjs": "~7.8.0",
    "seedrandom": "^3.0.5",
    "spritesmith": "^3.5.1",
    "sweetalert2": "^11.6.13",
    "tslib": "^2.3.0",
    "uuid": "^11.0.2",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular-eslint/builder": "18.4.0",
    "@angular-eslint/eslint-plugin": "18.4.0",
    "@angular-eslint/eslint-plugin-template": "18.4.0",
    "@angular-eslint/schematics": "18.4.0",
    "@angular-eslint/template-parser": "18.4.0",
    "@angular/build": "^19.2.1",
    "@angular/cli": "^19.2.1",
    "@angular/compiler-cli": "^19.2.1",
    "@types/js-yaml": "^4.0.9",
    "@types/lodash": "^4.17.13",
    "@types/mustache": "^4.2.6",
    "@types/node": "^22.15.30",
    "@types/seedrandom": "^3.0.8",
    "@typescript-eslint/eslint-plugin": "7.11.0",
    "@typescript-eslint/parser": "7.11.0",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.0",
    "conventional-changelog": "^6.0.0",
    "conventional-changelog-cli": "^5.0.0",
    "cpy-cli": "^5.0.0",
    "daisyui": "^5.0.35",
    "eslint": "8.57.0",
    "fs-extra": "^11.2.0",
    "git-describe": "^4.1.1",
    "js-yaml": "^4.1.0",
    "ngxtension-plugin": "^5.0.0",
    "postcss": "^8.4.47",
    "recursive-readdir": "^2.2.3",
    "tailwindcss": "^4.1.7",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "overrides": {
    "@sweetalert2/ngx-sweetalert2": {
      "@angular/common": "19",
      "@angular/core": "19"
    },
    "ngx-webstorage": {
      "@angular/common": "19",
      "@angular/core": "19"
    }
  }
}
